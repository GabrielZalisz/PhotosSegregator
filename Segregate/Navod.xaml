        <Grid.RowDefinitions>
            <RowDefinition Height="120
                           " />
            <RowDefinition Height="175*" />
        </Grid.RowDefinitions>
        <Image Name="image1" Stretch="Uniform" Grid.Row="1" Source="/TridicFotek;component/Images/navod.jpg" Margin="10" />
